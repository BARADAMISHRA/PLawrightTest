pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/BARADAMISHRA/PLawrightTest.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm ci'
                bat 'npx playwright install --with-deps'
                 bat 'npm install --save-dev allure-playwright allure-commandline'
            }
        }

        stage('Execute Test Case') {
            steps {
                bat 'npx playwright test e2eTestScenario/browserlunch.spec.ts --project=chrome'
            }
        }

        stage('Generate Allure Report') {
            steps {
                bat 'npx allure generate allure-results --clean -o allure-report'
            }
        }

        stage('Publish Playwright HTML Report') {
            steps {
                publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'playwright-report',
                    reportFiles: 'index.html',
                    reportName: 'Playwright HTML Report'
                ])
            }
        }
    }

    post {
        always {
            // Archive HTML report
            archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true

            // Publish Allure report (requires Allure Jenkins plugin)
            allure([
                includeProperties: false,
                jdk: '',
                results: [[path: 'allure-results']],
                 commandline: 'allure'
            ])
        }
    }
}
